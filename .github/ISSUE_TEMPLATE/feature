name: Feature REquest
description: Create an issue for a new Feature that would enhace the game.
labels: enhancement
title: '[Feature] '

body:
  - type: textarea
    id: description
    attributes:
      label: 'Description'
      placeholder: 'Describe what this would be'
    validations:
      required: true
      
  - type: textarea
    id: reason
    attributes:
      label: 'Reason'
      placeholder: 'Why would this make the Game better?'
    validations:
      required: true

  - type: textarea
    id: screenshot
    attributes:
      label: 'Screenshots'
      description: 'Upload screenshots or other resources that help describe the new Feature'
    validations:
      required: false
